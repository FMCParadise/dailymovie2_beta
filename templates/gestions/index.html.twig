{% extends 'base.html.twig' %}

{% block body %}
    <section>
        <div class="container-fluid">
            <h2 class="h2 m-5 text-center text-uppercase fw-bold">{{ title }}</h2>
            <div class="row gx-3">
                {% for  article in posts %}
                    <div class="col-lg-3 col-md-4 col-sm-6">
                        <article class="card mb-5  ">
                            <a href="{{ path('app_posts', {'slug': article.slug}) }}">
                                <img src="/assets/images/square/{{ asset(article.image)}}" class="d-block w-100"
                                     alt="...">
                            </a>
                            <div class="card-body">
                                <div class="my-1">
                                    <a href="{{ path('app_edit_post', {'slug': article.slug}) }}" class="btn fw-bold btn-primary">Modifier l'article</a>
                                </div>
                                <a  aria-label="voirs l'article {{ article.slug }}" class="d-block card-title fst-italic   text-capitalizetext-decoration-none"
                                    href="{{ path('app_posts', {'slug': article.slug}) }}">
                                    {{ article.title|slice(0, 25) }}...
                                </a>

                                <p class="card-text text-wrap fw-bold ">
                                    {{ article.content|slice(0, 255) |raw }}...</p>
                            </div>
                            <div class="d-flex text-capitalize px-3  justify-content-between align-items-baseline">
                                <p class="">Par : {{article.getUserId().getName() }} {{article.getUserId().getFirstName()}}</p>
                                <p class=" fs-7 fw-light"> Créé le : {{ article.getCreatedAt().format('d-m-Y') }}</p>
                            </div>
                        </article>
                    </div>
                {% endfor %}
            </div>
        </div>

        <div class="mt-auto">
            <ul class="pagination pagination-lg justify-content-center">
                {% if nPage > 1 %}
                    <li class="page-item"><a class="page-link" href="{{ path('app_gestions', {'nPage': nPage - 1}) }}">Précédent</a></li>
                {% endif %}
                {% for page in pagination %}
                    <li class="page-item {{ (nPage == page) ? 'active' : '' }}">
                        <a class="page-link" href="{{ path('app_gestions', {'nPage': page}) }}">{{ page }}</a>
                    </li>
                {% endfor %}
                {% if pagination|length > nPage and nPage >= 1 %}
                    <li class="page-item"><a class="page-link" href="{{ path('app_gestions', {'nPage': nPage + 1 }) }}">Suivant</a></li>
                {% endif %}
            </ul>
        </div>

    </section>




{% endblock %}
